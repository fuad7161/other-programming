#define ll long long
const int mod = 1e9 + 7;
const int Inf = (int)2e9 + 5;
const ll  Lnf = (ll)2e18 + 5;
const int N   = 4e5 + 5;
int solve() 
{
	
	long long n,m;
	scanf("%lld%lld", &n,&m);
	ll x = min(n%m,abs(n%m-m));
	printf("%lld\n",x);

	return 0;
}
int main(){
