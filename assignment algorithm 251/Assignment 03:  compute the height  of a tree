#include<bits/stdc++.h>
using namespace std;

const int N = 1e5+5;
int height[N],a[N];
vector<int>g[N];
void dfs(int u,int p){
	height[u]=a[p];
	 for(int v:g[u]){
	 	   if(v==p) continue;
	 	   dfs(v,u);
	 	   height[u]=max(height[u],height[v]+a[u]);
	 }
}
int main(){
	int n,i,j,u,v;
	cout<<"Enter the number of Node : ";
	cin>>n;
    for(int i=1;i<=n;i++) {
    	cin>>a[i];
    }
	cout<<"Enter edges : ";
	for(int i=1;i<n;i++){
        cin>>u>>v;
        g[v].push_back(u);
        g[u].push_back(v);
	}
	dfs(1,0);
	for(int i=1;i<=n;i++) {
		cout<<"Maximum height of "<<i<<" is "<<height[i]<<endl;
	}
}
