#include<bits/stdc++.h>
using namespace std;
    
const int N = 1e5+5;

vector<int> g[N];
int height[N];

void dfs(int u, int p){
    for(auto v: g[u]){
        if(v == p)continue;
        height[v] = height[u]+1;
        dfs(v,u);
    }
}

int main(){
    cin.tie(0);ios::sync_with_stdio(false);
    
    int n;
    cin>>n;

    int x,y;
    for(int i=0;i<n-1;i++){
        cin>>x>>y;
        g[x].push_back(y);
        g[y].push_back(x);
    }

    height[1] = 0;
    dfs(1,-1);

    for(int i=1;i<=n;i++){
        cout<<"Height of "<<i<< " from root 1 is "<<height[i]<<endl;
    }cout<<endl;
    return 0;
}

/*
7
1 2
1 3
1 4
3 5
4 6
4 7
Height of 1 from root 1 is 0
Height of 2 from root 1 is 1
Height of 3 from root 1 is 1
Height of 4 from root 1 is 1
Height of 5 from root 1 is 2
Height of 6 from root 1 is 2
Height of 7 from root 1 is 2
*/
