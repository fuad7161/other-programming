#include<bits/stdc++.h>
using namespace std;

const int N = 1e5+5;
int height[N],a[N];
vector<int>g[N];
void dfs(int u,int p){
	height[u]=a[p];
	 for(int v:g[u]){
	 	   if(v==p) continue;
	 	   dfs(v,u);
	 	   height[u]=max(height[u],height[v]+a[u]);
	 }
}
int main(){
	int n,i,j,u,v;
	cout<<"Enter the number of Node : ";
	cin>>n;
    for(int i=1;i<=n;i++) {
    	cin>>a[i];
    }
	cout<<"Enter edges : ";
	for(int i=1;i<n;i++){
        cin>>u>>v;
        g[v].push_back(u);
        g[u].push_back(v);
	}
	dfs(1,0);
	for(int i=1;i<=n;i++) {
		cout<<"Maximum height of "<<i<<" is "<<height[i]<<endl;
	}
}

7
2 1 2 3 1 4 3
1 2
1 3
1 4
3 5
4 6
4 7
Maximum height of 1 is 8
Maximum height of 2 is 2
Maximum height of 3 is 4
Maximum height of 4 is 6
Maximum height of 5 is 2
Maximum height of 6 is 3
Maximum height of 7 is 3
